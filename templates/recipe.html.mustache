<article class="recipe">

  <header>
    <h1>{{title}}</h1>
    <div class="stats">
      <span class="serves">Serves <span class="special number-served">{{number_served}}</span></span>
      <span class="prep-time">
        Takes
        <span class="special minutes">{{preparation_time_minutes}}</span>
      </span>
    </div>
  </header>

  <section class="notes">
    {{#notes}}
    <p>{{.}}</p>
    {{/notes}}
  </section>

  <section class="main">
    <section class="ingredients">
      <h2>Ingredients</h2>

      <ul>
        {{#ingredients}}
        <li class="ingredient {{#optional}}optional{{/optional}}" data-id="{{id}}">
            <span class="name">{{name}}</span>
            <span class="measure">
              <span class="value">{{measure.value}}</span>
              <span class="type">{{measure.type}}</span>
            </span>
            <span class="optional">(optional)</span>
        </li>
        {{/ingredients}}
      </ul>
    </section>

    <section class="directions">
      <h2>Directions</h2>
      {{#directions}}
      <div class="direction {{#parallelizable}}parallelizable{{/parallelizable}}"
          data-ingredient-ids="{{#ingredient_ids}}{{.}},{{/ingredient_ids}}">
        {{text}}
      </div>
      {{/directions}}
    </section>
  </section>

</article>
